{
  "manifest_version": 3,
  "name": "AI Code Capture",
  "description": "Capture and save AI-generated code snippets, with optional execution.",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content.js"],
      "css": ["highlight.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Code Capture"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-code-capture@example.com"
    }
  }
}
